[Unit]
Description=Espurna stonith API to virsh
After=firewalld.service

[Service]
ExecStart=/opt/auto-install.sh --master 1 --if_viewers eth0 --if_nas eth1 --if_drbd eth2 --raid_level 1 --raid_devices /dev/vdb,/dev/vdc --pv_device /dev/md0 --espurna_apikey 0123456789ABCDEF 1>/tmp/auto-install.log 2>/tmp/auto-install-error.log
Type=simple

[Install]
WantedBy=multi-user.target
